        <Style x:Key="BigFont20">
            <Setter Property="Control.FontSize" Value="20"/>
        </Style>
        <!-- Шаблон для красной панели -->
        <DataTemplate x:Key="ParameterTemplate" >
            <Border Background="#FFFFCCCC" BorderBrush="Red" BorderThickness="1" Margin="5" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding DataContext.AddedPanelsValue.Count, RelativeSource={RelativeSource AncestorType=Window}, StringFormat='Шаг {0}'}"/>
                    <Grid Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Блок"/>
                        <ComboBox Grid.Column="1" Margin="10,0,10,0" SelectedValue="{Binding Block}" SelectedValuePath="Content" SelectedIndex="1">
                            <ComboBoxItem Content="МЛЭП А7"/>
                            <ComboBoxItem Content="МЛЭП А8"/>
                            <ComboBoxItem Content="МЛЭП А9"/>
                            <ComboBoxItem Content="МЛЭП А10"/>
                            <ComboBoxItem Content="МЛЭП А11"/>
                            <ComboBoxItem Content="МТПиН А3"/>
                            <ComboBoxItem Content="МТПиН А4"/>
                            <ComboBoxItem Content="МТПиН А5"/>
                            <ComboBoxItem Content="МТПиН А6"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width ="auto"/>
                            <ColumnDefinition Width = "*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Text="Время"/>
                        <TextBox Grid.Column="1" Margin="10,0,10,0" Text="{Binding Time, Mode=TwoWay}" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Параметр"/>
                        <ComboBox Grid.Column="1"  Margin="10,0,10,0" SelectedIndex="0" SelectedValue="{Binding Parameter}" SelectedValuePath="Content" HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="Мощность активной нагрузки"/>
                            <ComboBoxItem Content="Мощность индуктивной нагрузки"/>
                            <ComboBoxItem Content="Индуктивность"/>
                            <ComboBoxItem Content="Активное сопротивление"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Значение"/>
                        <TextBox Grid.Column="1" Text="{Binding ParameterValue}" Margin="10,0,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Шаблон для синей панели -->
        <DataTemplate x:Key="StateTemplate">
            <Border Background="#FFCCE5FF" BorderBrush="Blue" BorderThickness="1" Margin="5" Padding="10">
