                            <System:Int32>1</System:Int32>
                            <System:Int32>0</System:Int32>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Левый Переключатель"/>
                        <ComboBox Grid.Column="1"  Margin="20,0,30,0"  SelectedValue="{Binding SwitchL}" HorizontalAlignment="Stretch">
                            <System:Int32>1</System:Int32>
                            <System:Int32>0</System:Int32>
                        </ComboBox>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="CompletedINstruction">
            <ListBoxItem>
                
            </ListBoxItem>
        </DataTemplate>

        <!-- Селектор шаблонов (выбирает подходящий DataTemplate по Type) -->
        <vm:PanelTemplateSelector x:Key="PanelTemplateSelector"
