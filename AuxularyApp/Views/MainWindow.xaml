                        <TextBlock FontSize="30" Text="МТПиН1-А6             вкл.\вкл."/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3"><Run Text="Инструкции для оператора"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Style="{StaticResource BigFont20}" ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" MaxHeight="30"/>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="1*" MaxHeight="30"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="2" Text="Выполненные"/>
                        <TextBlock Grid.Row="0" Text="Запланированные"/>
                        <ListBox Grid.Row="3" ItemsSource="{Binding CompletedInstructions}">
                            <ListBox.ItemTemplate>
                                <DataTemplate >
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <ListBox Grid.Row="1" ItemsSource="{Binding PlannedInstructions}">
                            <ListBox.ItemTemplate>
                                <DataTemplate >
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="7*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0" Grid.Column="0" Content="Добавить шаг параметров" Command="{Binding AddParameterPanelCommand}" />
                            <Button Grid.Row="0" Grid.Column="1" Content="Добавить шаг состояния" Command="{Binding AddStatePanelCommand}"/>
                            <Button Grid.Row="0" Grid.Column="2" Content="Удалить последний шаг"/>
                            <Button Grid.Row="1" Grid.Column="1" Content="Создать новую инструкцию" Background="Yellow" Command="{Binding CreateNewInstructionCommand}"/>
                            <Button Grid.Row="1" Grid.Column="2" Content="Готово" Background="GreenYellow" Command="{Binding AcceptCommand}"/>
                            <Button Grid.Row="1" Grid.Column="0" Content="Удалить" Background="IndianRed"/>
                        </Grid>
                        <TextBlock Grid.Row="1" Text="{Binding instructionNote}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Grid Grid.Row="2">
                            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Visible">
                                <StackPanel CanVerticallyScroll="True" x:Name="GeneralStepGrid2" Orientation="Vertical">
                                    <ItemsControl 
                                        Grid.Row="1"
                                        ItemsSource="{Binding AddedPanels}"
                                        ItemTemplateSelector="{StaticResource PanelTemplateSelector}"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>
        <TextBlock Grid.Row="2" Text=" © ИДСТУ СО РАН, 2025" />
    </Grid>
</Window>
