<Window x:Class="OperatorApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OperatorApplication.Views"
        xmlns:vm="clr-namespace:OperatorApplication.ViewModels"
        xmlns:ms="clr-namespace:OperatorApplication.Models.DataModels.InstructionModels"
        xmlns:System="clr-namespace:System;assembly=netstandard"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="600"  Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>

        <!-- Шаблон для красной панели -->
        <DataTemplate x:Key="ParameterTemplate" >
            <Border Background="#FFFFCCCC" BorderBrush="Red" BorderThickness="1" Margin="5" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding StepNumber, StringFormat='Шаг {0}'}"/>
                    <Grid Grid.Column="1" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Margin="10,0,10,0" Text="Блок"/>
                        <TextBlock Grid.Column="1" Margin="10,0,10,0" Text="{Binding Block}" Background="LightGray"/>
                    </Grid>
                    <Grid Grid.Column="2" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width ="auto"/>
                            <ColumnDefinition Width = "*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Margin="10,0,10,0" Text="Время"/>
                        <TextBlock Grid.Column="1" Margin="10,0,10,0" Text="{Binding Time}" Background="LightGray"/>
                    </Grid>
                    <Grid Grid.Column="3" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Margin="10,0,10,0" Text="Параметр"/>
                        <TextBlock Grid.Column="1" Margin="10,0,10,0" Text="{Binding Parameter}" Background="LightGray"/>
                    </Grid>
                    <Grid Grid.Column="4" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Margin="10,0,10,0" Text="Значение"/>
                        <TextBlock Grid.Column="1" Margin="10,0,10,0" Text="{Binding ParameterValue}" Background="LightGray"/>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Шаблон для синей панели -->
        <DataTemplate x:Key="StateTemplate">
            <Border Background="#FFCCE5FF" BorderBrush="Blue" BorderThickness="1" Margin="5" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text=""/>
                    <Grid Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Блок"/>
                        <ComboBox Grid.Column="1" Margin="10,0,10,0" SelectedValue="" SelectedValuePath="Content" SelectedIndex="1">
                            <ComboBoxItem Content="МТПиН А3"/>
                            <ComboBoxItem Content="МТПиН А4"/>
                            <ComboBoxItem Content="МТПиН А5"/>
                            <ComboBoxItem Content="МТПиН А6"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width ="auto"/>
                            <ColumnDefinition Width = "*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Text="Время"/>
                        <TextBox Grid.Column="1" Margin="10,0,10,0" Text="" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <Grid Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Правый Переключатель"/>
                        <ComboBox Grid.Column="1"  Margin="10,0,10,0" SelectedIndex="1"  SelectedItem="" HorizontalAlignment="Stretch">
                            <System:Int32>1</System:Int32>
                            <System:Int32>0</System:Int32>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Левый Переключатель"/>
                        <TextBlock Grid.Column="1"  Margin="20,0,30,0"  Text="{Binding SwitchL}" />
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Селектор шаблонов (выбирает подходящий DataTemplate по Type) -->
        <vm:PanelTemplateSelector x:Key="TemplateSelector"
        ParameterTemplate="{StaticResource ParameterTemplate}"
        StateTemplate="{StaticResource StateTemplate}"/>
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" MaxHeight="40"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*" MaxHeight="40"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Запланированные инструкции" FontSize="20"/>
                <TextBlock Grid.Row="2" Text="Выполненные инструкции" FontSize="20"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding InstructionCollection}" SelectedItem="{Binding SelectedInstruction, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate >
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox Grid.Row="3" ItemsSource="{Binding CompleteInstructionCollection}" SelectedItem="{Binding SelectedInstruction, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate >
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <StackPanel Background="Azure" Grid.Column="1">
                <ItemsControl 
                    ItemsSource="{Binding InstructionStepsCollection}"
                    ItemTemplateSelector="{StaticResource TemplateSelector}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
